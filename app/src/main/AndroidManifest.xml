<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.max.chat_firebase">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_convive"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UsersActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChatActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".UsersActivity"
            android:theme="@style/AppTheme2"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".settingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SearchActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserActivity"
            android:parentActivityName=".ChatActivity" />

        <provider
            android:name=".mContentProvider"
            android:authorities="com.example.max.chat_firebase" />

        <activity android:name=".DatabaseGUIActivity" />

        <service android:name=".DatabaseIntentService" />
        <service android:name=".OfflineJobIntentService" />
        <service android:name=".WriteToFirebaseJobIntentService" />
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest><!--
            android:theme="@style/AppTheme">
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
--><!-- android:icon="@mipmap/ic_launcher" -->
